<section class="py-5 container">
    <div class="col-md-8">
        <h2>Login</h2>
        <form class="form login-form row g-2">
            <div class="form-group row-auto">
                <label for="email-login">Email:</label>
                <input class="form-input form-control" type="text" id="email-login" />
            </div>
            <div class="form-group row-auto">
                <label for="password-login">Password:</label>
                <input class="form-input form-control" type="password" id="password-login" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Login now!</button>
            </div>
        </form>
    </div>
</section>