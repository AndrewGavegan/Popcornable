<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Popcornable<h1>
            <p class="lead text-muted">
              Is the movie popcornable?
            </p>
            <form class="row g-3 mx-auto">
              <div class="col-md-10">
                <input class="form-control " list="datalistOptions" id="userInput"
                  placeholder="Type to search movies...">
                <datalist id="datalistOptions">
                  {{#each movies as |movie|}}
                  <option data-movieid='{{movie.id}}' value='{{movie.name}}'>
                    {{/each}}
                </datalist>

              </div>
              <div class="col-md-2">
                <button type='submit' id='submitBtn' class='btn btn-primary mb-4'>Search</button>
              </div>
            </form>
            {{!-- <p>
              <a href="#" class="btn btn-primary my-2">Login</a>
              <a href="#" class="btn btn-secondary my-2">Sign up</a>
            </p> --}}
      </div>
    </div>
    <div class="album py-5 ">
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3" id="viewMovies">
          {{#each reviews as |review|}}
          {{> homeposts}}
          {{/each}}
        </div>
      </div>
    </div>
  </section>

  <script src="../../search.js"></script>
</main>