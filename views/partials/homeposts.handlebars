<div class="col">
  <div class="card shadow-sm" data-movieid="{{review.movie_id}}">
    <img src="{{movie.image_url}}"></img>
    <div class="card-body">
      <p class="card-text">
        {{review.body}} {{movie.name}}
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" id="viewBtn" class="btn btn-sm btn-outline-secondary"
            data-movieid="{{review.movie_id}}">
            View movie
          </button>
        </div>
        <small class="text-muted">{{review.createdAt}}</small>
      </div>
    </div>
  </div>
</div>