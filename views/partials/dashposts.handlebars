<div class="col-md-6">
  <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
    <div class="col-lg-auto">
      <img src="{{movie.image_url}}" width="200" height="300"></img>
      {{!-- link to movie's reviews added to img tag --}}
      {{!-- <p>{{movie.image_url}}</p> --}}
    </div>

    <div class="col p-4 d-flex flex-column position-static" style="background: white;">
      <div class="card-body multi-collapse-{{id}} collapse show" id="multi-collapse-2-{{id}}">
        <div class="my-rating" data-review="{{id}}" data-rating="{{rating}}"></div>
        <h4 class="mb-0">{{movie.name}}</h4>
        <div class="mb-1 text-muted">{{format_date updatedAt}}</div>
        <p class="card-text mb-auto">{{body}}</p>
      </div>
      <div class="card-body multi-collapse-{{id}} collapse" id="multi-collapse-1-{{id}}">
        <div class="my-rating-edit" data-review="{{id}}" data-rating="{{rating}}"></div>
        <h4 class="mb-0">{{movie.name}}</h4>
        <textarea class="form-control text-break" id="content-{{id}}" rows="3">{{body}}</textarea>
        <button type="submit" class="btn btn-primary update-post" data-post="{{id}}">Update Post</button>
        <button type="delete" class="btn btn-primary delete-post" data-post="{{id}}">Delete Post</button>
      </div>
      {{!-- set button as a button that can show or hide the card body --}}
      <button class="btn btn-light" type="button" data-bs-toggle="collapse" data-bs-target=".multi-collapse-{{id}}"
        aria-expanded="false" aria-controls="multi-collapse-1-{{id}} multi-collapse-2-{{id}}">
        Modify/Delete Post
      </button>
    </div>
  </div>
</div>